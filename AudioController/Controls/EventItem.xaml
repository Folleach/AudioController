<UserControl x:Class="AudioController.Controls.EventItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioController.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="240"
             MinHeight="60" MinWidth="240">
    <Border x:Name="Root" Style="{DynamicResource LightHoveredBorder}" MouseLeftButtonUp="Click">
        <Grid>
            <Label x:Name="ContentName" Content="Name" Style="{DynamicResource Header2}" Height="30" VerticalAlignment="Top" />
            <ProgressBar x:Name="PreviewValue" Style="{DynamicResource DefaultProgressBar}" Minimum="0" Maximum="1" Height="2" Margin="0 58 0 0"/>
        </Grid>
    </Border>
</UserControl>
