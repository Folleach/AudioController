<UserControl x:Class="AudioController.Controls.DeviceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioController.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250"
             MinHeight="30">
    <Border x:Name="Root" Style="{DynamicResource LightHoveredBorder}" MouseLeftButtonUp="Click">
        <Label x:Name="DeviceName" Content="[Capture] Microphone 1" Style="{DynamicResource DefaultText}" />
    </Border>
</UserControl>
